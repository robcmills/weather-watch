
<h4>Enter a date range:</h4>
<div class='date-range col-xs-3'>
  <div class='input-div'>
    <label>Start date:</label>
    {{pikaday-input value=startAt}}
  </div>
  
  <div class='input-div'>
    <label>End date:</label>
    {{pikaday-input value=endAt}}
  </div>
  
  <button class='btn btn-primary btn-xs' 
    {{action 'update' target='controllers.api'}}>Update</button>
</div>

<div class='visualization col-xs-4'>
  {{#nf-graph
    width=800
    height=300
    showLanes=true
    showFrets=true
    paddingTop=10
    paddingRight=10}}

    {{#nf-x-axis tickCount=5}}
      <text>{{tick.value}}</text>
    {{/nf-x-axis}}

    {{#nf-y-axis}}
      <text>{{tick.value}}ÂºF</text>
    {{/nf-y-axis}}

    {{#nf-graph-content}}
      {{nf-line
        data=controllers.weathers.graphData
        xprop="x"
        yprop="y"
        interpolator="monotone"}}
    {{/nf-graph-content}}

  {{/nf-graph}}
</div>

